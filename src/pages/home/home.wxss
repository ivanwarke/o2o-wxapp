
.home-tools {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}

.home-tools .home-icons text {
  margin-left: 32rpx;
}

.weui-search-bar {
  background-color:#fff;
  padding: 0;
  border: none;
  width: 60%;
}

.weui-search-bar .weui-search-bar__form {
  background-color:#f2f2f2;
  border-radius: 30px;
  /* border: 2rpx solid #e6e6ea; */
}

.weui-search-bar .weui-search-bar__box {
  border: none;
}

.weui-search-bar .weui-search-bar__label {
  border-radius: 30px;
}

.weui-search-bar .weui-search-bar__input {
  height: 60rpx;
  line-height: 60rpx;
}

.home-content {
  padding: 0 30rpx 160rpx;
}

.home-content .home-category {
  display: flex;
  margin: 20rpx 0;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  justify-content: space-between;
}

.home-content .home-category .home-current {
  
}

.home-content .home-category .home-picker {
  color: #d75876;
}

.home-content .home-foods .weui-panel__hd {
  padding-left: 0;
  padding-right: 0;
}

.home-content .home-foods .nothing {
  text-align: center;
  color: #999;
  font-size: 30rpx;
  margin-top: 60rpx;
}

.home-content .home-foods .weui-media-box {
  padding-left: 0;
  padding-right: 0;
}

.home-content .home-foods .weui-media-box__hd_in-appmsg {
  width: 160rpx;
}

.home-content .home-foods .weui-media-box__title {

}

.home-content .home-foods .weui-media-box__title .sellout {
  /* color: #9E9E9E; */
  font-weight: 400;
  font-size: 28rpx;
}

.home-content .home-foods .weui-media-box__desc {
  font-size: 24rpx;
  padding-right: 18rpx;
  line-height: 38rpx;
  margin-top: 2rpx;
}

.home-content .home-foods .weui-media-box__ad {
  display: flex;
  justify-content: space-between;
  height: 54rpx;
  line-height: 54rpx;
  overflow: hidden;
}

.home-content .home-foods .weui-media-box__ad .weui-media-box__price {
  color: #f00;
  font-size: 32rpx;
  margin-top: 4rpx;
}

.home-content .home-foods .weui-media-box__ad .weui-media-box__price .newprice {
  margin-right: 10rpx;
}

.home-content .home-foods .weui-media-box__ad .weui-media-box__price .prevprice {
  color: #888;
  font-size: 26rpx;
}

.home-content .home-foods .weui-media-box__ad .weui-media-box__buy .iconfont {
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 50%;
  padding: 9rpx;
} 

.home-content .home-foods .weui-media-box__ad .weui-media-box__buy .icon-minus_normal{
  border: 1rpx solid #dbdbdb;
  color: #b0b0b0;
}

.home-content .home-foods .weui-media-box__ad .weui-media-box__buy .number {
  font-size: 26rpx;
  font-weight: 400;
  margin: 0 28rpx;
  color: #363636;
}

.home-content .home-foods .weui-media-box__ad .weui-media-box__buy .icon-add_noraml{
  background-color: #f7c754;
  border: 1rpx solid #f7c754;
}

.home-content .home-foods .weui-panel__hd:after,
.home-content .home-foods .weui-panel:before,
.home-content .home-foods .weui-panel:after,
.home-content .home-foods .weui-media-box:before
{
  border: none;
}

.home-cart {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 108rpx;
  z-index: 1001;
}

.home-cart .home-cart-box {
  width: 100%;
  height: 108rpx;
  position: relative;
  display: flex;
}

.home-cart .home-cart-badge {
  position: absolute;
  left: 20rpx;
  top: -20rpx;
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  background-color: #f5d157;
  line-height: 100rpx;
  text-align: center;
  z-index: 9999;
}

.home-cart .home-cart-badge .iconfont {
  font-size: 58rpx;
}

.home-cart .home-cart-badge .number{
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 38rpx;
  height: 38rpx;
  line-height: 38rpx;
  background-color: #fb3208;
  color: #fff;
  font-size: 24rpx;
  font-weight: 300;
  border-radius: 50%;
}

.home-cart .home-cart-calc {
  width: 71.5%;
  height: 108rpx;
  background-color: rgba(69, 68, 69, 0.98);
}

.home-cart .home-cart-calc .home-cart-calc-totalprice {
  margin: -4rpx 0 0 150rpx;
}

.home-cart .home-cart-calc .home-cart-calc-totalprice .home-cart-calc-totalprice-after {
  color: #fff;
  font-weight: 300;
  font-size: 50rpx;
}

.home-cart .home-cart-calc .home-cart-calc-totalprice .home-cart-calc-totalprice-before {
  color: #a7a19c;
  font-size: 26rpx;
  margin-left: 8rpx;
  text-decoration: line-through;
}

.home-cart .home-cart-calc .home-cart-calc-post {
  color: #a7a19c;
  margin-top: -8rpx;
  margin-left: 140rpx;
  font-size: 22rpx;
}

.home-cart .home-cart-btn {
  width: 29.5%;
  height: 108rpx;
  background-color: #ffc857;
  line-height: 108rpx;
  text-align: center;
  font-size: 32rpx;
}

.home-orders {
  position: fixed;
  /* bottom: 108rpx; */
  width: 100%;
  max-height: 460rpx;
  background-color: #fff;
  z-index: 1000;
  transition: bottom .2s;
}

.home-orders .home-orders-clear {
  height: 50rpx;
  line-height: 40rpx;
  background-color: #f2f2f2;
  color: #666;
  text-align: center;
  border-left: 8rpx solid #4ab820;
}

.home-orders .home-orders-clear text {
  font-size: 24rpx;
}

.home-mask {
  position: fixed;
  top: 0;
  left:0;
  width: 100%;
  height: 100%;
  background-color: rgba(45, 45, 45, 0.9);
  z-index: 999;
  transition: opacity .1s linear;
}